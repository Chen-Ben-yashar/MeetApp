<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    app:layout_anchorGravity="right"
    android:background="@drawable/custom_border"
    >

    <LinearLayout
        android:id="@+id/groupOptionMenu"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/AddParticipantBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/black_rounded_frame"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/addMemberMsg"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/groupDetailsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/black_rounded_frame"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/groupDetailMsg"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resetTimeChoiceBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/black_rounded_frame"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/resetTimesMsg"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/exitGroupBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/black_rounded_frame"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/exitGroupMsg"
            android:textColor="@color/colorRed"
            android:textStyle="bold" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>